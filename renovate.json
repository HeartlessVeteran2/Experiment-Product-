{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "registryUrls": [
        "https://api.mapbox.com/downloads/v2/releases/maven"
      ],
      "matchPackageNames": [
        "/^com\\.mapbox\\.maps:/",
        "/^com\\.mapbox\\.extension:/"
      ]
    }
  ],
  "hostRules": [
    {
      "matchHost": "api.mapbox.com",
      "hostType": "maven",
      "username": "mapbox",
      "password": "{{ env.MAPBOX_DOWNLOADS_TOKEN }}"
    }
  ]
}
